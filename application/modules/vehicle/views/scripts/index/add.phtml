	index=0;
	function addRow(){
		index++;
		template='<tr align="center" id="row_price_'+index+'">';
		template+='<td width="2%">'+index+'</td>';
		
		template+='<td width="20%"><select class="form-control select2" id="from_location_'+index+'" name="from_location_'+index+'" >';
