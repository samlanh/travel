		template+='</select>';
		
		template+='<td width="20%"><select class="form-control select2" id="to_location_'+index+'" name="to_location_'+index+'" >';
		template+='<option value=""><?php echo $tr->translate("To Location");?></option>';
			<?php foreach($this->location as $location){?>
				template+='<option value="'+<?php echo $location['id']?>+'"><?php echo $location['name'];?></option>';
			<?php }?>
		template+='</select></td>';
		
		template+='<td><input style="text-align:center;" type="text" id="duration_'+index+'" name="duration_'+index+'"  value="" class="form-control"></td>';
		template+='<td><input style="text-align:center;" onkeypress="return isNumberKey(event);" type="text" id="cost_'+index+'" name="cost_'+index+'"  value="" class="form-control"></td>';
		template+='<td><input style="text-align:center;" onkeypress="return isNumberKey(event);" type="text" id="price_'+index+'" name="price_'+index+'"  value="" class="form-control"></td>';
		template+='<td><input style="text-align:center;" onkeypress="return isNumberKey(event);" onkeyup="checkAmount('+index+');" type="text" id="discount_'+index+'" name="discount_'+index+'"  value="" class="form-control"></td>';
